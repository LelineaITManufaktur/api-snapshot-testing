{
    "name": "lelinea/snapshot-testing",
    "description": "Provides PHPUnit assertions for snapshot testing",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Lelinea\\SnapshotTesting\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": { "Tests\\": ["tests/unit"] }
    },
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "ext-dom": "*",
        "ext-simplexml": "*",
        "ext-mbstring": "*",
        "phpunit/phpunit": "~7.5",
        "symfony/filesystem": "~2.8|~3.0|~4.0|~5.0",
        "symfony/property-access": "~2.8|~3.0|~4.0|~5.0",
        "webmozart/assert": "~1.2"
    },
    "require-dev": {
        "doctrine/coding-standard": "~6.0"
    }
}
